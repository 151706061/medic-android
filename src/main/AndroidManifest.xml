<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="org.medicmobile.webapp.mobile"
		android:versionCode="1"
		android:versionName="0.1-alpha">
	<uses-sdk android:minSdkVersion="19"
			android:targetSdkVersion="19"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
	<uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT"/>
	<application android:label="@string/app_name"
			android:icon="@drawable/ic_launcher">
		<activity android:name="StartupActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="EmbeddedBrowserActivity"/>
		<activity android:name="SettingsDialogActivity"/>

		<!-- [ALIASES] for different brands -->
		<activity-alias android:label="MedicMobile demo"
				android:icon="@drawable/preconfig_icn_medicmobile"
				android:name=".StartupActivity-medicmobile"
				android:enabled="false"
				android:targetActivity=".StartupActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>
		<activity-alias android:label="Living Goods"
				android:icon="@drawable/preconfig_icn_livinggoods"
				android:name=".StartupActivity-livinggoods"
				android:enabled="false"
				android:targetActivity=".StartupActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>
	</application>
</manifest>

